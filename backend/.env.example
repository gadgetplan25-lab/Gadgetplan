# ========================================
# E-COMMERCE BACKEND ENVIRONMENT VARIABLES
# ========================================

# NODE ENVIRONMENT
NODE_ENV=production
PORT=4000

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_NAME=gadgetplan_db
DB_USER=gadget_user
DB_PASSWORD=super_secret_pw
DB_HOST=localhost
# DB_PORT=3306   # optional, default 3306

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_at_least_32_characters_long

# ========================================
# PAYMENT GATEWAY
# (XENDIT removed – not used)
# ========================================
# XENDIT_SECRET_KEY=...

# ========================================
# EMAIL CONFIGURATION
# ========================================
EMAIL=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ========================================
# WHATSAPP CONFIGURATION
# (FONNTE removed – not used)
# ========================================
# FONNTE_TOKEN=...
# WA_ADMIN_NUMBER=...

# ========================================
# SHIPPING (RAJAONGKIR)
# ========================================
RAJAONGKIR_API_KEY=your_rajaongkir_api_key
SHOP_CITY_ID=152  # Jakarta Selatan (change as needed)

# ========================================
# FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=https://your-production-domain.com
ORIGIN=https://your-production-domain.com

# ========================================
# OPTIONAL: CORS ADDITIONAL ORIGINS
# ========================================
# CORS_ADDITIONAL_ORIGINS=https://admin.yourdomain.com,https://api.yourdomain.com

# ========================================
# OPTIONAL: REDIS CONFIGURATION (for caching)
# ========================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ========================================
# OPTIONAL: LOGGING CONFIGURATION
# ========================================
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# ========================================
# OPTIONAL: MONITORING
# ========================================
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_license_key