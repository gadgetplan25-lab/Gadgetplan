# === DATABASE ===
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=toko_online

# === JWT & SECURITY ===
# Generate dengan: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-characters-here

# === EMAIL (untuk OTP) ===
# Gunakan Gmail App Password, bukan password biasa
# Cara dapat: Google Account > Security > 2-Step Verification > App Passwords
EMAIL=youremail@gmail.com
EMAIL_PASS=your-gmail-app-password-16-characters

# === RAJAONGKIR (untuk ongkir) ===
# Daftar di: https://rajaongkir.com
RAJAONGKIR_API_KEY=your-rajaongkir-api-key
SHOP_CITY_ID=455

# === FRONTEND ===
# Development: http://localhost:3000
# Production: https://your-vercel-app.vercel.app
FRONTEND_URL=http://localhost:3000

# === ENVIRONMENT ===
# development | production
NODE_ENV=development

# === SERVER ===
PORT=4000
